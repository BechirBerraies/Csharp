@{
    ViewData["Title"] = "Home Page";
}
@model Student 
    <div class="card shadow border p-3">
        <h4 class="card-head  text-success">Thanks ASP.NET Core Form </h4>
        <div class="card-body">    
            <form asp-action="CreateStudent" asp-controller="Home"method="post">

        <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class=" form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Location" class="form-label"></label>
            <input type="text" class=" form-control"asp-for="Location">
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
          <div class="form-group mb-3">
            <label asp-for="Language" class="form-label"></label>
            <input type="text" class=" form-control" asp-for="Language">
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
          <div class="form-check-group mb-3 d-flex justify-content-center">
            <label asp-for="Comment" class="form-check-label"> Comment</label>
            <textarea type="text" class=" form-control" asp-for="Comment"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>




    <button class="btn btn-success w-100">Post Your Song 🤟🤟</button>
    </form>
    </div>




    






    </div>