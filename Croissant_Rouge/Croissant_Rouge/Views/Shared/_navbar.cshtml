@{
    int? userId = Context.Session.GetInt32("userId"); // Use nullable int
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Croissant Rouge </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Choose a Donation</a>
                    </li>
                </ul>
            </div>
            @if (userId.HasValue)
            {

                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="MyProfile">Profile </a>

                <form asp-action="Logout" asp-controller="Users" method="post">
                    <input type="submit" value="Logout" class="btn btn-link btn-lg">
                </form>




            }
            else
            {
                <a class="btn btn-primary " asp-area="" asp-controller="Users" asp-action="LogReg">Login</a>

            }

        </div>
    </nav>
</header>
