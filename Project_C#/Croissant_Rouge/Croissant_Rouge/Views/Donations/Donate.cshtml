@model Donation
@{
    int userId = (int)Context.Session.GetInt32("userId");
}
<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Bree+Serif&family=EB+Garamond:ital,wght@0,500;1,800&display=swap">
    <style>
        body {
            background-attachment: fixed;
            background-size: cover;
        }

        #container {
            box-shadow: 0 15px 30px 1px grey;
            background: rgba(255, 255, 255, 0.90);
            text-align: center;
            border-radius: 5px;
            overflow: hidden;
            margin: 5em auto;
            width: 60%; /* Adjusted card width */
        }

        .product-details {
            text-align: left;
            overflow: hidden;
            padding: 50px;
        }

        #container .product-details h1 {
            font-family: 'Bebas Neue', cursive;
            display: inline-block;
            position: relative;
            font-size: 50px;
            color: #ff1a1a;
            margin: 0;
        }

        #container .product-details > p {
            font-family: 'EB Garamond', serif;
            text-align: left;
            font-size: 30px;
            color: #020202;
        }

        .control {
            text-align: center;
        }

        .btn {
            transform: translateY(0px);
            transition: 0.3s linear;
            background: #ff1a1a;
            border-radius: 5px;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            outline: none;
            border: none;
            color: #eee;
            padding: 0;
            margin-bottom: 10px;
            display: inline-block; /* Display the button inline */
        }

            .btn:hover {
                transform: translateY(-6px);
                background: #ff1a1a;
            }

            .btn span {
                font-family: 'Farsan', cursive;
                transition: transform 0.3s;
                display: inline-block;
                padding: 10px 20px;
                font-size: 1.2em;
                margin: 0;
            }

            .btn .buy {
                z-index: 3;
                font-weight: bolder;
            }

            .btn:hover .shopping-cart {
                transform: translateX(0%);
            }

        .product-image:hover .info {
            transform: translateX(0);
        }

        .info ul li {
            transition: 0.3s ease;
        }

            .info ul li:hover {
                transform: translateX(50px) scale(1.3);
            }

        .product-image:hover img {
            transition: all 0.3s ease-out;
            transform: scale(1.2, 1.2);
        }
    </style>
</head>

<body>
    @await Html.PartialAsync("_UserNav")
    <form asp-action="CreateDonation" asp-controller="Donations" method="post" enctype="multipart/form-data">
        <input type="hidden" name="UserId" value="@userId" />
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <div id="container">
            <div class="product-details">
                <h1>Donation</h1>

                <div class="mb-5 mt-4">
                    <h4>Title :</h4>
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title" aria-label="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-5 mt-4">
                    <h4>Category :</h4>
                    <label asp-for="Category" class="form-label"></label>
                    <select class="form-select" asp-for="Category">
                        <option selected>Choose your Category</option>
                        <option asp-value="Medication">Medication</option>
                        <option asp-value="Equipment">Equipment</option>
                        <option asp-value="Clothing">Clothing</option>
                        <option asp-value="Food">Food</option>
                    </select>
                </div>
                <div class="mb-5">
                    <h4>Quantity :</h4>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Quantity"
                           aria-label="Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div>
                    <h4>Description :</h4>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="product-image">
                    <div>
                        <h4> Image:</h4>

                        <input type="file" id="imageFile" name="imageFile" class="form-control" accept=".jpg, .jpeg, .png, .gif" />

                    </div>
                </div>
            </div>
            <div class="control">
                <button class="btn">
                    <span class="buy" type="submit">Donate now</span>
                </button>
            </div>
        </div>

    </form>
</body>

</html>