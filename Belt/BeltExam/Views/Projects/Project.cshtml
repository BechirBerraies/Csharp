@{
    ViewData["Title"] = "Project Page";
    int userId = (int)Context.Session.GetInt32("userId");
}

@model Project 

@await Html.PartialAsync("_Navbar")
<div class="text-center">
    <h1 class="display-4 mb-5 ">Start a Project</h1>
    <div class="row">
        <div class="col-6">
            
            <div class="border border-rounded p-2 bg-light bg-gradient-10">

                <form asp-action="CreateProject" asp-controller="Projects" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Goal" class="form-label"></label>
                        <input asp-for="Goal" class="form-control">
                        <span class="text-danger" asp-validation-for="Goal"></span>
                    </div>

                        <input type="hidden" asp-for="@userId">
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control">
                        <span class="text-danger" asp-validation-for="EndDate"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>


                    <div class="mb-3">
                        <input type="submit" class="btn btn-outline-primary w-50" >
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
