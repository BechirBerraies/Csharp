@{
    ViewData["Title"] = "Privacy Policy";
    int? userId = (int)Context.Session.GetInt32("userId");
    string username = @Context.Session.GetString("username");
}



@{
    ViewData["Title"] = "Privacy Policy";
}
@model Post
@await Html.PartialAsync("_Navbar")
<div class="container">
<div class="d-flex justify-content-between">
    <h1 class="display-4">Welcone @username </h1>
    <h1 class="display-4">User Id : @userId </h1>
</div>
    <div class="row">
        <div class="col-6">
            <div class="col-6 card shadow">
            <div class="card-header h2">Add Post </div>
            <div class="card-body">
            <form asp-action="CreatePost" asp-controller="Home" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
    <input type="hidden" asp-for="UserId" value="@userId">

                <div class="form-group mb-3">
                    <label asp-for="Subject"></label>
                    <input asp-for="Subject" class="form-control">
                    <span class="text-danger" asp-validation-for="Subject"></span>
                    </div>


                    <div class="form-group mb-3">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" cols="30" rows="10"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-success" value="Submit">
                    </div>

                    
            </form>
            </div>
        </div>
        </div>
        <div class="col-6">
            <div class="border bg-light bg-dragient-25">
                <table class="table-striped hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Subject</th>
                            <th>Content</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (Post post in ViewBag.AllPosts)
                            {
                                <tr>
                                    <td>@post.PostId</td>
                                    <td>@post.Title</td>
                                    <td>@post.Subject</td>
                                    <td>@post.Content</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>