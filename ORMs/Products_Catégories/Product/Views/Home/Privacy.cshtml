@{
    ViewData["Title"] = "Privacy Policy";
}

@model Categories

<div class="container">
<div class="d-flex justify-content-between">

</div>
    <div class="row">
        <div class="col-6">
            <div class="col-6 card shadow">
            <div class="card-header h2">Add Category </div>
            <div class="card-body">
            <form asp-action="CreateCategory" asp-controller="Home" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-success" value="Submit">
                    </div>

                    
            </form>
            </div>
        </div>
        </div>
                <div class="col-6">
            <div class="border bg-light bg-dragient-25">
                <table class="table-striped hover">
                    <thead>
                        <tr>
                            
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (Categories post in ViewBag.AllCategories)
                            {
                                <tr>
                                    
                                    <td>@post.Name</td>
                                </tr>
                            }
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>